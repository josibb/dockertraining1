@{
    ViewBag.Title = "Home Page";
    ViewBag.BackendUrl = "http://";
}

<h1></h1>
<form method="POST">
    <label for="backendUrl">BackendUrl</label>
    <input type="text" style="width:250px" id="backendUrl" name="backendUrl" value="http://backend.web/api/values" />
    <input type="submit" value="Invoke" />
</form>

<ul>
    @{if (Model != null && Model.Count > 0)
        {
            <h1>Backend results</h1>
            foreach (var emp in Model)
            {
                <li>@emp</li>
            }
        }}
</ul>
